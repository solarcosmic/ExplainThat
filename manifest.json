{
  "manifest_version": 3,
  "name": "ExplainThat",
  "version": "1.0.0",
  "description": "Select any text on a webpage and have AI explain it for you.",
  "permissions": ["contextMenus", "storage"],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/marked.umd.min.js", "src/purify.min.js", "src/content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/copy-solid.svg", "src/check-solid.svg"],
      "matches": ["<all_urls>"]
    }
  ]
}